*
	margin 0
	padding 0
ul
	list-style none

body
	background-color #f5f5f5

.content
	display block
	left 50%
	position absolute
	top 50%
	transform translate3d(-50%,-50%, 0)
	width 600px
	h2
		display block
		font-size 30px
		margin 0 auto 20px
		text-align center
	ul
		background-color #fff
		border 2px solid #ccc
		display block
		height 400px
		margin 0 auto 20px
		overflow scroll
		padding 10px
		li
			display block
			font-size 14px
			margin 0 0 10px
			span
				display block
				font-weight bold
			p
				color #333
	.controls
		display block
		div
			display inline-block
			vertical-align top
			width 45%
			label
				display block
				margin 0 0 5px
			input[type=text]
			textarea
				display block
				border 1px solid #000
				font-size 12px
				padding 3px
				width 90%
			button
				background-color #4CAF50
				border none
				box-shadow 0 5px #999
				color #fff
				cursor pointer
				font-size 18px
				margin 22px 0 0
				outline none
				padding 5px 8px
				text-align center
				&:hover
					background-color #3e8e4
				&:active
					background-color #3e8e41
					box-shadow 0 2px #666
					transform translateY(3px)
			&:last-child
				width 10%
		


















